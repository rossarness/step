        tired_3: _tired_3
        Label:
                text: ' '
                size: 10, 10
                size_hint: 1, None
        SectionLabel:
                text: "Dane Postaci"
                pos_hint: {'top': 0.9}
        Separator:
        StepRow:
                size_hint: 1, .2
                Char_Label:
                        text: u'Imie Postaci'
                Step_Input_Focus:
                        id: _character_name
                        size_hint: .8, 1
                        name: "character_name"
                        text: 'Wpisz imie swojej postaci'
        StepRow:
                Char_Label:
                        text: 'Pochodzenie Postaci'
                        size_hint: 4, 1
                Step_Input_Focus:
                        id: _origin
                        name: "origin"
                        text: 'Wpisz pochodzenie swojej postaci'
                        size_hint: 7, 1
                Step_Long_Label:
                        text: 'Zmeczenie'
                        size_hint: 2, 1
                Tired:
                        id: _tired_0
                        value: 0
                        active: True
                        group: "exhaustion"
                        pos_hint: {'top': 0.9}
                Tired:
                        id: _tired_1
                        value: 1
                        group: "exhaustion"
                        pos_hint: {'top': 0.9}
