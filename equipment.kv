#:kivy 1.0.9
<Equipment@StepRelative>:
        StepRow:
                height: 50
                pos_hint: {'top': 1}
                SectionLabel:
                        text: "EKWIPUNEK"
                        pos_hint: {'top': 1}
        StepAnchor:
                pos_hint: {'top': 0.9}
                size_hint: 0.4, 1
                anchor_x: 'left'
                anchor_y: 'top'
                canvas:
                        Color:
                                rgba: 0.7, 0.7, 0.7, 1
                        Rectangle:
                                pos: self.pos
                                size: self.size
                RelativeLayout:
                        canvas:
                                Color:
                                        rgba: 0.7, 0.7, 0.7, 1
                                Rectangle:
                                        pos: self.pos
                                        size: self.size
                                Color:
                                        rgba: 0.9, 0.9, 0.9, 1
                                Rectangle:
                                        pos: self.x+10, self.top-450
                                        size: self.width*0.9, self.height*0.35
                        StepButton:
                                id: helm
                                text: 'Helm'
                                pos_hint: {'top': 0.95, 'center_x': 0.5}
                                text_size: self.width, None
                                size_hint: 0.2, None
                                size: 50, 50
                        StepButton:
                                id: armor
                                text: 'Zbroja'
                                pos_hint: {'top': 0.85, 'center_x': 0.5}
                                size_hint: 0.4, None
                                size: 100, 120
                        StepButton:
                                id: weapon_1
                                text: 'Bron 1'
                                pos_hint: {'top': 0.8, 'center_x': 0.15}
                                size_hint: 0.2, None
                                size: 50, 120
                        StepButton:
                                id: weapon_2
                                text: 'Bron 2'
                                pos_hint: {'top': 0.8, 'center_x': 0.85}
                                size_hint: 0.2, None
                                size: 50, 120
                        StepButton:
                                id: boots
                                text: 'Buty'
                                pos_hint: {'top': 0.63, 'center_x': 0.5}
                                size_hint: 0.25, None
                                size: 60, 60
        StepAnchor:
                pos_hint: {'top': 0.9, 'right': 1}
                size_hint: 0.6, 1
                anchor_x: 'right'
                anchor_y: 'top'
                canvas:
                        Color:
                                rgba: 0.5, 0.5, 0.5, 1
                        Rectangle:
                                pos: self.pos
                                size: self.size
                MyButton:
                        id: inventory
                        text: 'inventory'
                        pos: 0, 0
