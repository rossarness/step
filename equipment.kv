<Inventory_Btn>:
        size: 200, 200
        size_hint: None, None
        text_size: 55, 45
        font_size: 15
        halign: 'center'
        valign: 'center'
        max_lines: 3

<Inventory_Item>:
        item_btn: _item_btn
        info_btn: _info_btn
        anchor_x: 'right'
        anchor_y: 'bottom'
        size: 200, 200
        size_hint: None, None
        Inventory_Item_Btn:
                id: _item_btn
                info_btn: _info_btn
        InfoButton:
                size: 75, 75
                id: _info_btn
                item_btn: _item_btn

<Inventory_Item_Btn>:
        canvas.before:
                Color:
                        rgba: hex('#808080')
                Rectangle:
                        pos: self.pos
                        size: self.size
        size: 98, 98
        size_hint: 1, 1

<InfoButton>:
        canvas.before:
                Color:
                        rgba: (128, 128, 128, 0.5)
                Ellipse:
                        pos: self.pos
                        size: self.size
        size_hint: None, None
        source: "res/info.png"

<InfoPopup>:
        size: 335, 400
        size_hint: .8, .5
        auto_dismiss: False
        title_size: self.height * 0.1
        RelativeLayout:
                BoxLayout:
                        orientation: "vertical"
                        size: 335, 300
                        pos_hint:{'top': .99, 'center_x': .5}
                        size_hint: .95, .85
                        stat_label: _stat_label
                        stat: _stat
                        sub_type: _sub_type
                        BoxLayout:
                                orientation: "horizontal"
                                size_hint: .99, .15
                                Label:
                                        id: _stat_label
                                        text_size: self.size
                                        halign: "left"
                                        valign: "middle"
                                        font_size: self.height * 0.5
                                        text: root.label
                                Label:
                                        id: _stat
                                        font_size: self.height * 0.5
                                        text_size: self.size
                                        halign: "right"
                                        valign: "middle"
                                        text: root.item_stat
                        BoxLayout:
                                orientation: "horizontal"
                                size_hint: .99, .15
                                Label:
                                        text_size: self.size
                                        halign: "left"
                                        valign: "middle"
                                        font_size: self.height * 0.5
                                        text: "Rodzaj przedmiotu: "
                                Label:
                                        id: _sub_type
                                        text_size: self.size
                                        font_size: self.height * 0.5
                                        halign: "right"
                                        valign: "middle"
                                        text: root.subtype
                        BoxLayout:
                                orientation: "horizontal"
                                size_hint: .99, .7
                                font_size: self.height * 0.4
                                ScrollableLabel:
                                        text: root.text
                Button:
                        pos_hint:{'top': 0.15}
                        text: "Zamknij"
                        size: 30, 30
                        font_size: self.height * 0.8
                        size_hint: 1, .2
                        on_release: root.dismiss()

<Add_Inventory_Item>:
        size: 200, 100
        size_hint: .4, .6
        title: "Dodaj przedmiot"
        auto_dismiss: False
        new_item: _item
        add_btn: _add
        stat_value: _stat_value
