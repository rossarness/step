                                        pos: self.pos
                                        size: self.size
                        size: 50, 30
                        allow_stretch: False
                        id: _chosen_img
                        pos_hint: {'top': 0.5, 'right': .65}
                        size_hint: .3, .3
                        source: 'res/red_x.png'
                BoxLayout:
                        orientation: "horizontal"
                        spacing: 5
                        pos_hint: {'top': 1}
                        Button:
                                id: _add
                                text: "Dodaj"
                                size_hint: .5, .15
                                on_release: root.add_item()
                        Button:
                                text: "Anuluj"
                                size_hint: .5, .15
                                on_release: root.dismiss()

<LoadDialog>:
        BoxLayout:
                size: root.size
                pos: root.pos
                orientation: "vertical"
                FileChooserIconView:
                        id: filechooser

                BoxLayout:
                        size_hint_y: None
                        height: 30
                        Button:
                                text: "Cancel"
                                on_release: root.cancel()
                        Button:
                                text: "Load"
                                on_release: root.load(filechooser.path, filechooser.selection)

