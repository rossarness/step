#:kivy 1.0.9
<Equipment@StepRelative>:
        StepRow:
                height: 50
                pos_hint: {'top': 1}
                canvas:
                        Color:
                                rgba: 0.3, 0.3, 0.3, 1
                        Rectangle:
                                pos: self.pos
                                size: self.size
                SectionLabel:
                        text: "EKWIPUNEK"
                        pos_hint: {'top': 1}
        StepAnchor:
                pos_hint: {'top': 0.9}
                size_hint: 0.4, 1
                anchor_x: 'left'
                anchor_y: 'top'
                canvas:
                        Color:
                                rgba: 0.7, 0.7, 0.7, 1
                        Rectangle:
                                pos: self.pos
                                size: self.size
                RelativeLayout:
                        id: equipment
                        canvas:
                                Color:
                                        rgba: 0.7, 0.7, 0.7, 1
                                Rectangle:
                                        pos: self.pos
                                        size: self.size
                                Color:
                                        rgba: 0.9, 0.9, 0.9, 1
                                Rectangle:
                                        pos: self.x+10, self.top-450
                                        size: self.width*0.9, self.height*0.35
                        EquipmentButton:
                                id: helm
                                name: "helm"
                                text: 'Helm'
                                pos_hint: {'top': 0.95, 'center_x': 0.5}
                                text_size: self.width, None
                                size_hint: 0.2, None
                                size: 50, 50
                        EquipmentButton:
                                id: armor
                                name: "armor"
                                text: 'Zbroja'
                                pos_hint: {'top': 0.85, 'center_x': 0.5}
                                size_hint: 0.4, None
                                size: 100, 120
                        EquipmentButton:
                                id: weapon_1
                                name: "weapon_1"
                                text: 'Bron 1'
                                pos_hint: {'top': 0.8, 'center_x': 0.15}
                                size_hint: 0.2, None
                                size: 50, 120
                        EquipmentButton:
                                id: weapon_2
                                name: "weapon_2"
                                text: 'Bron 2'
                                pos_hint: {'top': 0.8, 'center_x': 0.85}
                                size_hint: 0.2, None
                                size: 50, 120
                        EquipmentButton:
                                id: boots
                                name: "boots"
                                text: 'Buty'
                                pos_hint: {'top': 0.63, 'center_x': 0.5}
                                size_hint: 0.25, None
                                size: 60, 60
        StepAnchor:
                pos_hint: {'top': 0.9, 'right': 1}
                size_hint: 0.6, 1
                anchor_x: 'right'
                anchor_y: 'top'
                canvas:
                        Color:
                                rgba: 0.5, 0.5, 0.5, 1
                        Rectangle:
                                pos: self.pos
                                size: self.size
                RelativeLayout:
                        canvas:
                                Color:
                                        rgba: 0.5, 0.5, 0.5, 1
                                Rectangle:
                                        pos: self.pos
                                        size: self.size
                                Color:
                                        rgba: 0.1, 0.1, 0.1, 0.8
                                Rectangle:
                                        pos: self.x*0.26, self.y*0.01+28
                                        size: self.width*0.80, self.height*0.9
                        MyButton:
                                id: inventory
                                text: 'inventory'
                                pos_hint: {'top': 1}
                        GridLayout:
                                cols: 1
                                spacing: 2
                                pos_hint: {'top': 0.95}
                                EquipmentAddButton:
                                        item_list: _item_list
                                        text: "Add"
                                EquipmentDeleteButton:
                                        item_list: _item_list
                                        text: "Delete"
                        RelativeLayout:
                                size_hint: 0.9, 0.8
                                pos_hint: {'top': 0.95, 'x': 0.15}
                                RV:
                                        id: _item_list
                                        pos_hint: {'top': 0.95}
                                        pos: 20, 0
                                        viewclass: 'SelectableLabel'
                                        SelectableRecycleBoxLayout:
                                                id: _rv_layout
                                                spacing: 5
                                                default_size: None, dp(56)
                                                default_size_hint: 0.85, None
                                                size_hint: 1, None
                                                height: self.minimum_height
                                                orientation: 'vertical'
                                                multiselect: True
                                                touch_multiselect: True

