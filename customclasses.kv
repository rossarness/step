#:kivy 1.10.0
<SelectableLabel>:
        canvas.before:
                Color:
                        rgba: (.0, 0.9, .1, .2) if self.selected else (0.2, 0.2, 0.2, 1)
                Rectangle:
                        pos: self.pos
                        size: self.size

<EquipmentUIButton>:
        size: 70, 70
        size_hint: None, None

<EquipmentPopup>:
        size: 335, 400
        size_hint: None, .5
        items: _items
        auto_dismiss: False
        choose_btn: _choose_btn
        RelativeLayout:
                ScrollView:
                        size: 335, 200
                        size_hint: 1, None
                        pos_hint: {'top': 1}
                        GridLayout:
                                size_hint_y: None
                                id: _items
                                cols: 5
                                spacing: 3
                                padding: [0, 10, 0, 10]
                BoxLayout:
                        orientation: "horizontal"
                        spacing: 5
                        pos_hint: {'top': 1}
                        Button:
                                id: _choose_btn
                                text: "Wybierz"
                                size_hint: .5, .16
                                disabled: True
                                on_release: root.armor_btn.choose_item()
                        Button:
                                text: "Anuluj"
                                size_hint: .5, .16
                                on_release: root.dismiss()

<AddEquipmentPopup>:
        size: 200, 100
        size_hint: .4, .3
        title: "Dodaj przedmiot"
        auto_dismiss: False
        new_item: _item
        add_btn: _add
        RelativeLayout:
                TextInput:
                        id: _item
                        size: 250, 30
                        size_hint: 1, None
                        multiline: False
                        pos_hint: {'top': 0.8}
                BoxLayout:
                        orientation: "horizontal"
                        spacing: 5
                        pos_hint: {'top': 1}
                        Button:
                                id: _add
                                text: "Dodaj"
                                size_hint: .5, .3
                                on_release: root.add_item()
                        Button:
                                text: "Anuluj"
                                size_hint: .5, .3
                                on_release: root.dismiss()

<AddCharacterPopup>:
        size: 200, 100
        size_hint: .4, .3
        title: "Dodaj postaÄ‡"
        auto_dismiss: False
        new_item: _item
        add_btn: _add
        char_exist: _char_exist
        RelativeLayout:
                TextInput:
                        id: _item
                        size: 250, 30
                        size_hint: 1, None
                        multiline: False
                        pos_hint: {'top': 0.9}
                Label:
                        id: _char_exist
                        size: 250, 30
                        size_hint: 1, None
                        pos_hint: {'top': 0.6}
                        color: [.9,.2,.2,1]
                BoxLayout:
                        orientation: "horizontal"
                        spacing: 5
                        pos_hint: {'top': 1}
                        Button:
                                id: _add
                                text: "Dodaj"
                                size_hint: .5, .3
                                on_release: root.add_item()
                        Button:
                                text: "Anuluj"
                                size_hint: .5, .3
                                on_release: root.dismiss()


<EquipmentMenu>:
        size_hint: None, None

<EquipmentUIButton>:
        text_size: self.width, None
        halign: "center"

<PageLayout>:
        canvas:
                Color:
                        rgba: 0.3, 0.3, 0.3, 1
                Rectangle:
                        pos: self.pos
                        size: self.size

<SectionLabel@Label>:
        font_size: 30
        bold: 1
        color: 0.9, 0.9, 0.9, 1
        pos_hint: {'y': .4}
        size_hint: 1, .1

<StepButton@Button>:
        text_size: self.width, None
        halign: "center"

<MyButton@StepButton>:
        font_size: 20
        size_hint: None, None
        size: 250, 30

<MyGrid>:
        spacing: 2
        padding: 5
        row_default_height: 40
        row_force_default: True
        canvas:
                Color:
                        rgba: 0.3, 0.3, 0.3, 1
                Rectangle:
                        pos: self.pos
                        size: self.size

<StepAnchor@AnchorLayout>:
        padding: 5
        width: 250

<StepRelative@RelativeLayout>:
        padding: 5
        size_hint: 0.5, 1
        width: 250

<Char_Label@Label>:
        size: 150, 30
        size_hint: None, None
        color: 0.9, 0.9, 0.9, 1
        font_size: 15

<Step_Input_3_col@TextInput>:
        size_hint: .1, None
        size: 50, 30
        focus: True
        multiline: False

<Char_Label_3_col@Label>:
        size: 75, 30
        size_hint: None, None
        color: 0.9, 0.9, 0.9, 1
        font_size: 15

<StepRow@BoxLayout>:
        orientation: 'horizontal'
        spacing: 5

<Step_Input>:
        size_hint: .1, None
        size: 250, 30
        focus: True
        multiline: False

<Step_Label>:
        size: 50, 30
        size_hint: None, None
        color: 0.9, 0.9, 0.9, 1
        font_size: 15

<Step_Long_Label@Label>:
        size: 150, 30
        size_hint: .1, None
        text_size: self.width, None
        color: 0.9, 0.9, 0.9, 1
        font_size: 15
        halign: 'center'

<characterListButton>:
        size: 250, 50
        size_hint: 0.6, None

<MainAttributeInput>:
        color: (0, 0, 0, 1)
        background_color: (1, 1, 1, 1)
        background_normal: ''
        size_hint: .1, None
        size: 250, 30

<AttributesDropdown>:
        canvas.before:
                Color:
                        rgba: (0, 0, 0, 1)
                Rectangle:
                        pos: self.pos
                        size: self.size

<Total_Health>:
        canvas.before:
                Color:
                        rgba: (1, 1, 1, .5)
                Rectangle:
                        pos: self.pos
                        size: self.size
        size_hint: .1, None
        size: 250, 30
        color: (0, 0, 0, 1)

<Tooltip>:
        size_hint: None, None
        shorten: True
        shorten_from: 'right'
        size: 200, 50
        canvas.before:
                Color:
                        rgb: 0.2, 0.2, 0.2
                Rectangle:
                        size: self.size
                        pos: root.pos